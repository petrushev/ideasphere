{% extends 'default.phtml' %}

  {% block head_rest %}
    <meta name="google-site-verification" content="{{google_site_verification}}" />
  {% endblock %}

{% block container %}
    <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title">Recent problems</h2>
        </div>
        <div class="panel-body">
          <div class="row" >
          {% for p in problems %}
            <div class="col-lg-4" >
              <h3><a href="/problem/{{p.id}}" >{{p.title|e}}</a></h3>
              <div>
                mission: {{p.mission.title|e}} <br/>
                {{p.description|truncate(320, False, '...')|e}}
                <a href="/problem/{{p.id}}" >more</a>
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
    </div>

    <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title">Missions</h2>
        </div>
        <div class="panel-body">
          <div class="row" >
          {% for m in missions %}
            <div class="col-lg-4" >
              <h3><a href="/mission/{{m.id}}" >{{m.title|e}}</a></h3>
              <div>
                {{m.description|truncate(320, False, '...')|e}}
                <a href="/mission/{{m.id}}" >more</a>
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
    </div>
{% endblock %}
